   M /trunk/src/LibESMTPProvider.h
   M /trunk/src/LibETPANProvider.cc
   M /trunk/src/MessageDetails.cc
   M /trunk/src/MessageDetails.h
   M /trunk/src/MySQLBase.cc
   M /trunk/src/MySQLBase.h
   M /trunk/src/Recipient.h
